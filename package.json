{
  "name": "vibekit-proxy",
  "version": "0.0.1",
  "private": true,
  "description": "VibeKit proxy server for secure API routing",
  "workspaces": [
    "node"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "build:rust": "cd rust && cargo build --release",
    "build:node": "cd node && npm run build || echo 'No build script in node'",
    "start:rust": "cd rust && ./target/release/vibekit-proxy",
    "start:node": "cd node && npm start"
  },
  "devDependencies": {
    "turbo": "^1.13.0"
  }
}